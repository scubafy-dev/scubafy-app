enum Condition {
  excellent
  good
  fair
  poor
}

/// new model for each row in your ‚ÄúEquipment Inventory‚Äù table
model Equipment {
  /// e.g. "EQ-D001"
  id           String        @id @default(uuid())
  type         EquipmentType
  brand        String
  model        String
  serialNumber String

  /// purchase info
  purchaseDate DateTime?

  /// service info
  lastService DateTime?
  nextService DateTime?

  /// usage stats (75/100 in your UI)
  usageCount Int?
  usageLimit Int?

  status    EquipmentStatus @default(available)
  condition Condition
  notes     String?

  @@map("equipment")
}
